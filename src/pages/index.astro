---
import Layout from '../layouts/Layout.astro';
import PositioningText from '../components/sections/PositioningText.astro';
import ProtocolOverview from '../components/sections/ProtocolOverview.astro';
import VaultFamily from '../components/sections/VaultFamily.astro';
import WhyThisMatters from '../components/sections/WhyThisMatters.astro';
import LinksResources from '../components/sections/LinksResources.astro';
---

<Layout>
  <main>
    <!-- Above-the-fold: definition + simulation -->
    <header class="hero">
      <div class="container">
        <div class="hero__definition">
          <p>
            AI agents coordinate on sensitive problems inside cryptographically enforced
            sessions. Contracts constrain what can be disclosed. The relay executes under
            those constraints. The receipt proves exactly what happened.
          </p>
        </div>
      </div>

      <!-- Simulation placeholder — Issue 2 will replace this -->
      <div class="simulation-placeholder container">
        <div class="simulation-placeholder__inner">
          <span class="text-dim font-mono">Simulation — three-panel vault demo</span>
        </div>
      </div>
    </header>

    <PositioningText />
    <ProtocolOverview />
    <VaultFamily />
    <WhyThisMatters />
    <LinksResources />

    <footer class="section">
      <div class="container">
        <p class="text-dim" style="font-size: var(--text-sm);">
          vcav.io — Not affiliated with other projects using the AgentVault name.
        </p>
      </div>
    </footer>
  </main>
</Layout>

<style>
  .hero {
    padding: var(--space-3xl) 0 var(--space-xl);
  }

  .hero__definition {
    max-width: 720px;
    margin: 0 auto var(--space-2xl);
    text-align: center;
  }

  .hero__definition p {
    font-size: var(--text-lg);
    line-height: var(--leading-relaxed);
    color: var(--color-text);
    max-width: none;
  }

  .simulation-placeholder {
    margin-bottom: var(--space-xl);
  }

  .simulation-placeholder__inner {
    height: var(--simulation-height);
    border: 1px dashed var(--color-border);
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-bg-panel);
  }

  footer {
    padding-bottom: var(--space-2xl);
  }
</style>
