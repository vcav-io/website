---
import Layout from '../layouts/Layout.astro';
import Simulation from '../components/simulation/Simulation.astro';
import PositioningText from '../components/sections/PositioningText.astro';
import ProtocolOverview from '../components/sections/ProtocolOverview.astro';
import VaultFamily from '../components/sections/VaultFamily.astro';
import LinksResources from '../components/sections/LinksResources.astro';
---

<Layout>
  <main>
    <header class="hero">
      <div class="container">
        <div class="hero__content">
          <h1 class="hero__title">AgentVault</h1>
          <p class="hero__claim">
            When your AI agent negotiates on your behalf, what stops it from saying too much?
          </p>
          <ul class="hero__guarantees font-mono">
            <li>Schema-enforced output limits — not prompting, infrastructure</li>
            <li>Cryptographic receipts — tamper-evident proof of what happened</li>
            <li>Content-addressed contracts — immutable, independently verifiable</li>
          </ul>
          <div class="hero__ctas">
            <a href="https://github.com/vcav-io/agentvault" class="hero__cta" target="_blank" rel="noopener noreferrer">View on GitHub</a>
            <a href="#protocol" class="hero__cta hero__cta--secondary">Read the protocol</a>
          </div>
        </div>
      </div>
    </header>

    <PositioningText />

    <section class="simulation-section section--alt">
      <div class="container">
        <div class="sim-module-header">
          <div class="sim-module-header__text">
            <h2 class="sim-module-header__title">Mediation Triage Demo</h2>
            <p class="sim-module-header__subtitle text-secondary">
              Two agents coordinate on a contract dispute. Watch the protocol enforce bounded
              disclosure — structured outputs, schema validation, cryptographic receipts.
              This is a scripted walkthrough.
            </p>
          </div>
          <div class="sim-module-header__controls">
            <div class="sim-controls" id="sim-controls">
              <button class="sim-btn sim-btn--toggle" id="btn-toggle" aria-label="Play simulation">
                <svg class="sim-btn__icon-play" width="14" height="14" viewBox="0 0 14 14" fill="currentColor" aria-hidden="true">
                  <polygon points="2,1 13,7 2,13"/>
                </svg>
                <svg class="sim-btn__icon-pause" width="14" height="14" viewBox="0 0 14 14" fill="currentColor" aria-hidden="true" style="display:none">
                  <rect x="2" y="1" width="4" height="12"/>
                  <rect x="8" y="1" width="4" height="12"/>
                </svg>
                <span id="btn-toggle-label">Play</span>
              </button>
              <button class="sim-btn sim-btn--replay" id="btn-replay" aria-label="Replay simulation" style="display:none">
                <svg width="14" height="14" viewBox="0 0 14 14" fill="currentColor" aria-hidden="true">
                  <path d="M7 2a5 5 0 1 0 4.33 2.5L13 2H9V6l1.5-1.5A3.5 3.5 0 1 1 7 3.5V2z"/>
                </svg>
                <span>Replay</span>
              </button>
              <div class="sim-progress">
                <div class="sim-progress__track">
                  <div class="sim-progress__bar" id="progress-bar"></div>
                </div>
                <span class="sim-progress__time font-mono" id="progress-time"></span>
              </div>
            </div>
          </div>
        </div>
      </div>
      <Simulation />
    </section>

    <ProtocolOverview />
    <VaultFamily />
    <LinksResources />

    <footer class="site-footer">
      <div class="container">
        <p class="text-dim" style="font-size: var(--text-sm);">
          vcav.io — Not affiliated with other projects using the AgentVault name.
        </p>
      </div>
    </footer>
  </main>
</Layout>

<style>
  .hero {
    padding: var(--space-3xl) 0 var(--space-2xl);
    border-bottom: 1px solid var(--color-border-subtle);
  }

  .hero__content {
    max-width: var(--content-max);
    margin: 0 auto;
  }

  .hero__title {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 700;
    letter-spacing: -0.03em;
    color: var(--color-text);
    margin-bottom: var(--space-lg);
  }

  .hero__claim {
    font-size: var(--text-xl);
    line-height: var(--leading-normal);
    color: var(--color-text-secondary);
    max-width: none;
    margin-bottom: var(--space-md);
  }

  .hero__guarantees {
    list-style: none;
    max-width: fit-content;
    margin-top: var(--space-lg);
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .hero__guarantees li {
    font-size: var(--text-sm);
    color: var(--color-accent-dim);
    padding-left: 1.2em;
    position: relative;
  }

  .hero__guarantees li::before {
    content: '—';
    position: absolute;
    left: 0;
    color: var(--color-accent);
  }

  .hero__ctas {
    display: flex;
    gap: var(--space-md);
    margin-top: var(--space-xl);
  }

  .hero__cta {
    display: inline-flex;
    align-items: center;
    padding: var(--space-sm) var(--space-lg);
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    letter-spacing: 0.02em;
    border: 1px solid var(--color-accent-dim);
    border-radius: 4px;
    color: var(--color-accent);
    text-decoration: none;
    transition: color var(--duration-fast) var(--ease-out),
                border-color var(--duration-fast) var(--ease-out),
                background var(--duration-fast) var(--ease-out);
  }

  .hero__cta:hover {
    color: var(--color-accent-bright);
    border-color: var(--color-accent);
    background: rgba(90, 180, 192, 0.05);
  }

  .hero__cta--secondary {
    border-color: var(--color-border);
    color: var(--color-text-secondary);
  }

  .hero__cta--secondary:hover {
    color: var(--color-text);
    border-color: var(--color-text-dim);
    background: rgba(255, 255, 255, 0.03);
  }

  .simulation-section {
    padding: var(--space-2xl) 0 var(--space-3xl);
  }

  .sim-module-header {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
    max-width: var(--content-max);
    margin: 0 auto var(--space-lg);
  }

  .sim-module-header__title {
    font-size: var(--text-2xl);
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: var(--space-xs);
  }

  .sim-module-header__subtitle {
    font-size: var(--text-sm);
    line-height: var(--leading-relaxed);
  }

  .sim-module-header__controls {
    flex-shrink: 0;
  }

  /* Controls — duplicated from Simulation.astro since they're now in this file */
  .sim-controls {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    padding: 0 2px;
  }

  .sim-btn {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    padding: var(--space-xs) var(--space-sm);
    background: var(--color-bg-elevated);
    border: 1px solid var(--color-border);
    border-radius: 4px;
    color: var(--color-text-secondary);
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    cursor: pointer;
    transition: color var(--duration-fast) var(--ease-out),
                border-color var(--duration-fast) var(--ease-out);
    white-space: nowrap;
    text-transform: uppercase;
    letter-spacing: 0.04em;
  }

  .sim-btn:hover {
    color: var(--color-text);
    border-color: var(--color-accent-dim);
  }

  .sim-btn svg {
    flex-shrink: 0;
  }

  .sim-progress {
    flex: 1;
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    min-width: 120px;
  }

  .sim-progress__track {
    flex: 1;
    height: 2px;
    background: var(--color-border);
    border-radius: 1px;
    overflow: hidden;
  }

  .sim-progress__bar {
    height: 100%;
    width: 0%;
    background: var(--color-accent);
    border-radius: 1px;
    transition: width 200ms linear;
  }

  .sim-progress__bar--paused {
    animation: progress-pulse 1.5s ease-in-out infinite;
  }

  @keyframes progress-pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.3; }
  }

  .sim-progress__time {
    font-size: var(--text-xs);
    color: var(--color-text-dim);
    min-width: 72px;
    text-align: right;
  }

  @media (max-width: 1023px) {
    .sim-module-header {
      flex-direction: column;
      align-items: flex-start;
    }

    .sim-module-header__controls {
      position: sticky;
      top: 0;
      z-index: 10;
      background: var(--color-bg-alt);
      padding: var(--space-sm) var(--container-padding);
      margin: 0 calc(-1 * var(--container-padding));
    }
  }

  .site-footer {
    padding: var(--space-2xl) 0;
    border-top: 1px solid var(--color-border-subtle);
  }
</style>
